{
    "name": "Flask Dev Container",
    "build": {
        "dockerfile": "Dockerfile",
        "context": ".."
    },
    "settings": {
        "python.pythonPath": "/usr/local/bin/python"
    },
    "postCreateCommand": "pip install -r requirements.txt",
    "extensions": [
        "ms-python.python"
    ],
    "forwardPorts": [
        8888
    ],
    "remoteUser": "vscode"
}